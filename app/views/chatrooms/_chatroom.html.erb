<div class="chatroom">
  <div class="container">
    <div id="messages" data-chatroom-id="<%= @game_session.chatroom.name %>">
      <% if @game_session.chatroom.messages.nil? %>
        <p>NÃ£o tem mensagens</p>
      <% else %>
        <% @game_session.chatroom.messages.each do |message| %>
        <%#= if @message.created_at == DataTime.now %>
          <%= render "messages/message", message: message %>
        <% end %>
      <% end %>
    </div>
    <div class="chat">
      <%= simple_form_for [ @game_session.chatroom, @message ], remote: true do |f| %>
        <%= f.input :content, label: false, placeholder: "Message ##{@game_session.chatroom.name}" %>
      <% end %>
    </div>
  </div>
</div>
