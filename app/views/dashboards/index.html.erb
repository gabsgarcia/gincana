<h1>Your dashboard <%= current_user.nickname %></h1>

<div class="container mb-5">
  <div class="row my-2">
    <% @games.last(16).each do |game| %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <%= link_to game_path(game) do %>
            <% if game.thumbnail.present? %>
              <%= image_tag game.thumbnail, alt: game.name, class: 'game-img rounded-top' %>
            <% else %>
              <%= image_tag "night-city.jpg", width: 100, height: 100, crop: :fill %>
            <% end %>
            <div class="p-3 rounded-bottom d-flex flex-column">
              <strong class="card-game"><%= game.name %> <span class="text-muted font-weight-normal"></span></strong>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
