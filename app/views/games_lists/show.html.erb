<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @games_list.photo.attached? ? cl_image_path(@games_list.photo.key) : asset_path('games_list_background.png') %>)">
    <h1><strong><%= @games_list.name %><span class="text-muted font-weight-normal"></span></strong></h1>
  </div>
    <span class="game-tag"><%= pluralize(@games_list.games.size, 'game') %></span>
  </div>
  <div class="container mb-5">
    <div class="d-flex justify-content-between my-4">
      <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any games yet!" if @games_list.games.empty? %></em></small></span>
      <div>
        <%= link_to 'add a game', edit_games_list_path(@games_list), class: 'btn btn-flat' %>
        <%= link_to 'delete this List', games_list_path(@games_list), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this games_list?' } %>
      </div>
    </div>
    <div class="row my-2">
      <% @games_list.games.each do |game| %>
        <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
          <div class="bg-white rounded shadow h-100">
            <%= link_to game_path(game) do %>
              <% if game.thumbnail.present? %>
                <%= image_tag game.thumbnail, alt: game.name, class: 'game-img rounded-top' %>
              <% else %>
                <%= image_tag "night-city.jpg", width: 100, height: 100, crop: :fill %>
              <% end %>
              <div class="p-3 rounded-bottom d-flex flex-column">
                <strong><%= game.name %> <span class="text-muted font-weight-normal"></span></strong>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
