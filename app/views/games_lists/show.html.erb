<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @games_list.photo.attached? ? cl_image_path(@games_list.photo.key) : asset_path('games_list_background.png') %>)">
    <h1 class="list-title"><strong><%= @games_list.name.upcase %><span class="text-muted font-weight-normal"></span></strong></h1>
  </div>
    <span class="game-tag"><%= pluralize(@games_list.games.size, 'game') %></span>
  </div>
  <div class="container mb-5">
    <div class="d-flex justify-content-between my-4">
      <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any games yet!" if @games_list.games.empty? %></em></small></span>
      <div>
        <%= link_to 'Add a game', edit_games_list_path(@games_list), class: 'btn btn-flat' %>
        <%= link_to 'Delete this List', games_list_path(@games_list), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this Games List?' } %>
      </div>
    </div>
    <div class="row">
      <% @games_list.games.each do |game| %>
        <div class="co-12 colsm-6 col-md-4 mb-3">
          <%= link_to game_path(game), class:'text-decoration-none' do %>
            <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.1)), url(<%= game.thumbnail.present? ? game.thumbnail : asset_path('nigth-city.jpg') %>)">
              <div class="container">
                <div class="Title">
                  <span class="title_hover"><%= game.name %>
                    <div class="Title__highlight"></div>
                  </span>
                  <div class="Title__underline"></div>
                  <div aria-hidden class="Title__filled"><%= game.name %></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
