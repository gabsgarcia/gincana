<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @games_list.photo.attached? ? cl_image_path(@games_list.photo.key) : asset_path('games_list_background.jpg') %>)">
    <h1><%= @games_list.name %></h1>
  </div>
    <span class="game-tag"><%= pluralize(@games_list.games.size, 'game') %></span>
  </div> %>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any games yet!" if @games_list.games.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-flat" data-toggle="modal" data-target="#new_game_modal">
        add a game
      </button>
      <%= link_to 'delete this games_list', games_list_path(@games_list), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this games_list?' } %>
    </div>
  </div>
  <div class="row my-2">
    <% @games_list.games.each do |game| %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <%= image_tag game.thumbnail, alt: game.name, class: 'game-img rounded-top' %>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= game.name %><%= game.category %> <span class="text-muted font-weight-normal"></span></strong>
            <small class="text-muted"><%= game.summary %></small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
