<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <%= simple_form_for @games_list do |f| %>
        <%= f.input :name, placeholder: 'My Favorites' %>
        <%= f.input :category %>
        <%= f.input :photo %>
        <%= f.association :games, prompt: 'Select a game', input_html: { class: 'select2' } %>
        <%= f.submit class: 'btn btn-flat' %>
      <% end %>
    </div>
  </div>
</div>
