<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <%= simple_form_for @game_session do |f| %>
        <%= f.input :date, as: :date %>
        <%= f.input :time %>
        <%= f.input :description %>
        <%= f.input :game_id, collection: @games %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
